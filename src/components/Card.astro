---
interface Props {
  title: string;
  src: string;
}

const { title, src } = Astro.props;
---

<style>
  .monteserinCake {
    cursor: pointer;
    position: relative;
    width: 400px;
    height: 400px;
    overflow: hidden;
    display: flex;
    justify-content: center;
    align-items: center;
    background-size: 100% auto;
    border-radius: 15px;
    transition: 0.7s;
    &:hover{
      transform: scale(1.1);
    }

    .description.visible {
      top: 5%;
      background-color: rgba(255, 255, 255, 0.9);
      opacity: 1;
    }


    .description {
      position: absolute;
      width: 90%;
      height: 90%;
      top: 100%;
      transition: 0.5s;
      background-color: transparent;
      padding: 15px;
      border-radius: 15px;
      left: 5%;
    }
  }
  .card-title {
    font-size: 2.2rem;
    width: 95%;
    background-color: rgba(255, 255, 255, 0.9);
    padding: 7px;
    display: block;
    margin: 2% auto;
    border-radius: 15px;
    transition: 1.2s;
  }
  .card {
    height: 100%;
  }
  .card-title-description {
    font-family: "Cookie", monospace;
    text-align: center;
    font-size: 2.2rem;
    margin-bottom: 0;
  }

  .border {
    border: 1px solid white !important;
    width: 95%;
    height: 95%;
    border-radius: 15px;
  }
</style>

<div
  class="col-md-4 mb-4 monteserinCake" 
  style={`background-image: url(${src});`}
>
  <div class="border">
    <h3 class="text-center card-title">{title}</h3>

    <div class="description">
      <p class="card-title-description">{title}</p>
      <slot />
    </div>
  </div>
</div>
